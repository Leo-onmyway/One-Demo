<h2>Register</h2>
<br/>
<%= form_for(@user, :url=>{:action=>'create'}, :multipart=>true) do |f| %>
  
  <fieldset>
    <legend>Enter Your Details</legend>
       
    <br/>
    
    <% if @user.errors.count > 0 %>
      <h2><%= "#{pluralize(@user.errors.count, "error")} prohibited this user from being created:" %></h2>
      <% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
      <% end %>
    
    <br/>
    <% end %>
    
    <div class="form_row">
      <label for="User Name">User name:</label>
      <%= f.text_field :user_id, :size => 20, :maxlength => 12 %>
    </div>
  
    <div class="form_row">
      <label for="email">Email:</label>
      <%= f.text_field :email, :size => 20, :maxlength => 40 %>
    </div>
    
    <div class="form_row">
      <label for="password">Password:</label>
      <%= f.password_field :password, :size => 20, :maxlength => 12 %>
    </div>
    
    <div class="form_row">
      <p><%= f.submit "Register" %></p>
    </div>
  </fieldset>
  
<% end %>